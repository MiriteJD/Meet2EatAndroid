<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation = "vertical"
android:padding = "15pt"
android:layout_height="match_parent"
android:layout_width="match_parent">

    <TextView
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="neues Event erstellen"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:id="@+id/etTitle"/>

    <TextView
    android:layout_width="wrap_content"
    android:text="Eventname"
    android:layout_height="wrap_content" />


<EditText
    android:id = "@+id/etEventname"
    android:layout_marginBottom="5pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    
    <TextView
        android:layout_width="wrap_content"
        android:text="Location"
        android:layout_height="wrap_content" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/expandableListView"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Uhrzeit"
        android:id="@+id/etUhrzeit"
        android:layout_height="wrap_content"/>

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="time"
    android:ems="10"
    android:id="@+id/etcUhrzeit"
    android:clickable="true"
    android:layout_marginBottom="@dimen/activity_horizontal_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Gruppe(n)"
        android:id="@+id/etGruppen"
        android:layout_height="wrap_content" />

    <ExpandableListView
        android:id="@+id/eLvGruppen"
        android:layout_height="60dp"
        android:layout_width="wrap_content"

        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="Password"
        android:layout_height="wrap_content" />

    <EditText
    android:id = "@+id/etPassword"
    android:layout_width="match_parent"
    android:inputType="textPassword"
    android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"  />

<Button
    android:id="@+id/bRegister"
    android:text="Event erstellen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />


</LinearLayout>